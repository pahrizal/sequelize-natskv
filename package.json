{
  "name": "sequelize-natskv",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Pahrizal Marup <pahrizal.marup@alexys.com.au>",
  "license": "MIT",
  "dependencies": {
    "nats": "^2.29.3",
    "sequelize": "6",
    "sqlite3": "^5.1.7",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/jest": "27",
    "@types/node": "^24.0.15",
    "esbuild": "^0.19.2",
    "jest": "27",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "27"
  },
  "scripts": {
    "test": "jest",
    "build:clean": "rimraf dist/",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=es2019 --format=cjs --external:sequelize --external:nats --external:sqlite3 --external:pg-hstore --outfile=dist/index.js",
    "build": "npm-run-all build:clean build:types build:bundle",
    "prepare": "npm run build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ]
  }
}
